{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es2020",
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "allowJs": true,
    "checkJs": true
  },
  "include": [
    "*"
  ]
}
